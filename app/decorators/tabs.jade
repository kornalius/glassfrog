div(ng-init='selected = { tab: 0 }')

  ul.nav.nav-tabs(style='margin-bottom: 15px')

    li(ng-repeat='tab in form.tabs', ng-disabled='form.readonly', ng-click='$event.preventDefault() || (selected.tab = $index)', ng-class='{active: selected.tab === $index}')
      a(href='#') {{ tab.title }}

  .tab-content

    .tab-pane(ng-disabled='form.readonly', ng-repeat='tab in form.tabs', ng-show='selected.tab === $index', ng-class='{active: selected.tab === $index}')

      custom-decorator(ng-repeat='item in tab.items', form='item')
