div(data-extend-template="/partials/decorators/form-group-layout.html")

  div(data-block="content")
    label.control-label(ng-show='showTitle()') {{form.title}}

    .radio(ng-repeat='item in form.titleMap')
      label
        input(dyn-model-value, type='radio', sf-changed='form', ng-disabled='form.readonly', ng-model='$$value$$', ng-model-options='form.ngModelOptions', ng-value='item.value')
        span(ng-bind-html='item.name')
