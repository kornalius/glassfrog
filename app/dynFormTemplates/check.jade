div.switch-wrapper
  input(dyn-id="fields[fieldIndex].domId('input', $index)", name="{{fields[fieldIndex].domName('input', $index)}}", ng-model="row[fields[fieldIndex].fieldname]", ng-class="{'static': !isEditing($index)}", ng-disabled="!isEditing($index)", type="checkbox", attributes="fields[fieldIndex]", switch, field="fields[fieldIndex]")

label(for="{{fields[fieldIndex].domId('input', $index)}}")
  | {{fields[fieldIndex].caption ? fields[fieldIndex].caption : fields[fieldIndex].label}}
