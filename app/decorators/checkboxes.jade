div(data-extend-template="/partials/decorators/form-group-layout.html", sf-array='form', ng-model='$$value$$')

  div(data-block="content")
    label.control-label(ng-show='showTitle()') {{form.title}}

    .checkbox(ng-repeat='val in titleMapValues track by $index')
      .switch-wrapper

        input(dyn-model-value, ng-show="form.key", type="checkbox", style="background-color: white", sf-changed="form", ng-model-options="form.ngModelOptions", schema-validate="form", ng-model="$$value$$", ng-disabled="form.readonly", switch)

      label.control-label(ng-show="showTitle()", ng-bind-html="form.title")
