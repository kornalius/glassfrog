// checklistbox.html

.checklistbox.btn-group-vertical(data-toggle="buttons", name="{{field.domName('input', $index)}}", ng-disabled="!isEditing($index) || fields[{%fieldIndex%}].disabled", attributes="fields[{%fieldIndex%}]", style="width: 100%;", checklistbox, options="fields[{%fieldIndex%}].options", field="fields[{%fieldIndex%}]", ng-model="row.{%fieldName%}")

  label.btn.btn-default(ng-repeat="item in options", ng-click="item.checked = !item.checked")

    input(type="radio", name="{{fields[{%fieldIndex%}].domName('input', $index)}}", value="{{item.value}}")

    span.pull-left.cic(ng-class="{ 'cic-checkbox-checked text-info': item.checked, 'cic-checkbox-unchecked text-muted': !item.checked }", style="font-size: 18px; margin-right: 8px;")
    | {{item.label}}
