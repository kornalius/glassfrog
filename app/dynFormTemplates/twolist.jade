div(ng-class="{'input-group': isEditing($index)}", style="min-width:100%;", attributes="fields[{%fieldIndex%}]")
  select(multiple="multiple", name="{{fields[{%fieldIndex%}].domName('input', $index)}}", ng-class="{'static': !isEditing($index)}", ng-disabled="!isEditing($index) || fields[{%fieldIndex%}].disabled", ng-model="row[fn]", twolist, field="fields[{%fieldIndex%}]")
    option(ng-repeat="item in fields[{%fieldIndex%}].options", value="{{item.value}}") {{item.label}}
